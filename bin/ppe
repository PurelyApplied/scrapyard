if [ $# -ne 1 ] ;
then
    echo "ppe TeXfile."
    echo " Do not include an extention to the TeX file, but do include the period."
    echo " Runs pdflatex twice on the handed tex file, and displays it using evince."
elif [ ! -e $1tex ] ;
then
        echo "Cannot find file ${1}tex"
else
    pdflatex $1tex &&
    pdflatex $1tex &&
    evince $1pdf &
fi
